{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "types": ["node", "jest"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@ai-career/shared": ["../../packages/shared/src"],
      "@ai-career/shared/*": ["../../packages/shared/src/*"],
      "@ai-career/providers": ["../../packages/providers/src"],
      "@ai-career/providers/*": ["../../packages/providers/src/*"],
      "@ai-career/configs": ["../../packages/configs/src"],
      "@ai-career/configs/*": ["../../packages/configs/src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
